<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/containerNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/news_item_bg"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsImg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:text="Уникальный супер флешмоб"
            android:textColor="@color/newsColorTitle"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/newsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="18dp"
            android:lineSpacingExtra="8dp"
            android:maxLines="3"
            android:text="My fourth hour class got out late, and the lunch table I always sat at was full by the time I arrived. Mike was there, Jessica and Angela, Conner, Tyler, Eric and Lauren. Katie Marshall, the redheaded junior who lived around the Here was another puzzling question; and as Alice could not think of any good reason, and as the Caterpillar seemed to be in a VERY unpleasant state of mind, she turned away."
            android:textColor="@color/newsColorDescription" />

        <TextView
            android:id="@+id/newsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsDescription"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:text="18.11.2013" />

        <com.example.studentoffice.style.TopRoundImageView
            android:id="@+id/newsImg"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:background="@drawable/news_image_radius"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <Space
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_below="@+id/newsDate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
